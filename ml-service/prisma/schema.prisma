generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat  = "cjs"
}

datasource db {
  provider = "sqlite"
}

model Correction {
  id          Int      @default(autoincrement()) @id
  original    String
  corrected   String
  prompt      String
  createdAt   DateTime @default(now())

  @@map("corrections")
}