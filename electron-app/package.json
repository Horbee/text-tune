    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.8.4",
    "deepl-node": "^1.17.3",
    "motion": "^12.23.12",
    "openai": "^5.20.2",
    "react-icons": "^5.5.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
