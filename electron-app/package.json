{
  "name": "text-tune",
  "version": "1.2.0",
  "description": "A modern Electron application that fixes text in your clipboard",
  "main": "./out/main/main.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Horbee/texttune"
  },
  "author": {
    "name": "Horbee",
    "email": "n.horox@gmail.com"
  },
  "scripts": {
    "dev": "electron-vite dev -w",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "start": "electron-vite preview",
