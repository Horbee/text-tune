    "@mantine/notifications": "^8.3.5",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.12.2",
    "deepl-node": "^1.20.0",
    "motion": "^12.23.24",
    "openai": "^6.3.0",
    "react-icons": "^5.5.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.1.0",
